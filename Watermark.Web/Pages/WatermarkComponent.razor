@page "/"

@using Watermark.Web.Services.Contracts;
@using Watermark.Models.Dtos;

<PageTitle>Головна</PageTitle>

<div class="card card-body bg-light w-75 m-auto">
    <div class="container">
        <SourceImageComponent OnImageUploadedSuccess="OnSourceImageFileNameChanged" />
        @if (sourceImageStoredFileName != null)
        {
            <WatermarkImageComponent OnImageUploadedSuccess="OnWatermarkImageFileNameChanged"></WatermarkImageComponent>
        }
        @if (sourceImageStoredFileName != null || watermarkImageStoredFileName != null)
        {
            <div style="margin-top:5px">
                <h2>Крок 3: Виберіть розташування водяного знаку</h2>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="mainWatermarkStyle" id="inlineRadio1" checked="@(watermarkStyle == 1)" @onclick="() => watermarkStyle = 1">
                    <label class="form-check-label" for="inlineRadio1">По всій площі</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="mainWatermarkStyle" id="inlineRadio2" checked="@(watermarkStyle >= 2 && watermarkStyle <= 5)" @onclick="() => watermarkStyle = 2">
                    <label class="form-check-label" for="inlineRadio2">У кутку</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="mainWatermarkStyle" id="inlineRadio7" checked="@(watermarkStyle >= 6 && watermarkStyle <= 10)" @onclick="() => watermarkStyle = 6">
                    <label class="form-check-label" for="inlineRadio7">По центру</label>
                </div>
                @if (watermarkStyle >= 2 && watermarkStyle <= 5)
                {
                    <div style="margin-left:4rem">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="subWatermarkStyle" id="inlineRadio3" checked="@(watermarkStyle == 2)" @onclick="() => watermarkStyle = 2">
                            <label class="form-check-label" for="inlineRadio3">Правий нижній</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="subWatermarkStyle" id="inlineRadio4" checked="@(watermarkStyle == 3)" @onclick="() => watermarkStyle = 3">
                            <label class="form-check-label" for="inlineRadio4">Правий верхній</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="subWatermarkStyle" id="inlineRadio5" checked="@(watermarkStyle == 4)" @onclick="() => watermarkStyle = 4">
                            <label class="form-check-label" for="inlineRadio5">Лівий нижній</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="subWatermarkStyle" id="inlineRadio6" checked="@(watermarkStyle == 5)" @onclick="() => watermarkStyle = 5">
                            <label class="form-check-label" for="inlineRadio6">Лівий верхній</label>
                        </div>
                    </div>
                }
                @if (watermarkStyle >= 6 && watermarkStyle <= 10)
                {
                    <div style="margin-left:4rem">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="subWatermarkStyle" id="inlineRadio8" checked="@(watermarkStyle == 7)" @onclick="() => watermarkStyle = 7">
                            <label class="form-check-label" for="inlineRadio8">Зліва</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="subWatermarkStyle" id="inlineRadio9" checked="@(watermarkStyle == 8)" @onclick="() => watermarkStyle = 8">
                            <label class="form-check-label" for="inlineRadio9">Зверху</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="subWatermarkStyle" id="inlineRadio10" checked="@(watermarkStyle == 9)" @onclick="() => watermarkStyle = 9">
                            <label class="form-check-label" for="inlineRadio10">Справа</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="subWatermarkStyle" id="inlineRadio11" checked="@(watermarkStyle == 10)" @onclick="() => watermarkStyle = 10">
                            <label class="form-check-label" for="inlineRadio11">Знизу</label>
                        </div>
                    </div>
                }
            </div>
            
            <br />
            <div style="margin-top:5px">
                <ResultImageComponent SourceImageStoredFileName=@sourceImageStoredFileName
                                  WatermarkImageStoredFileName=@watermarkImageStoredFileName
                                  WatermarkStyle=@watermarkStyle />
            </div>
        }
        
    </div>
</div>